<Window x:Class="Zadanie_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="zapis" Content="ZAPIS DO CSV" HorizontalAlignment="Left" Margin="79,268,0,0" VerticalAlignment="Top" Width="109" Height="41"/>
        <Button x:Name="odczyt" Content="ODCZYT Z CSV" HorizontalAlignment="Left" Margin="346,268,0,0" VerticalAlignment="Top" Width="109" Height="41"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="218" Margin="79,24,0,0" VerticalAlignment="Top" Width="247"  >
            <ListView.View >
                <GridView>
                    <GridViewColumn Header="Name"  DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Age"  DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Mail"  DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="add" Content="ADD" HorizontalAlignment="Left" Margin="380,78,0,0" VerticalAlignment="Top" Width="75" Click="add_Click"/>

    </Grid>
</Window>
